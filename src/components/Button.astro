---
const { linkText, target, class: className, variant } = Astro.props;
---

<a href={target || "#"} class=`${className} ${variant}`>
  {linkText}
</a>
<style>
  a {
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px 20px;
    text-decoration: none;
    border-radius: 10px;
    font-size: 0.8rem;
    min-width: 200px;
    font-weight: 600;
    background-size: cover;
    background-position: center;
    transition: background-position 0.3s linear;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.4);
    font-family: "the-seasons", sans-serif !important;
    font-weight: 400;
    font-style: normal;
    letter-spacing: 2px;
    @media screen and (max-width: 820px) {
      min-width: 150px;
    }
  }
  a:hover {
    background-position: top;
  }
</style>
